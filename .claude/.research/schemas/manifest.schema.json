{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://research-workflow-assistant/schemas/manifest.schema.json",
  "title": "Artifact Manifest Schema",
  "description": "Artifact provenance and traceability record",
  "type": "object",
  "required": ["task_id", "created_at", "outputs"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Task identifier"
    },
    "run_id": {
      "type": "string",
      "description": "Execution run identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    },
    "duration_ms": {
      "type": "integer",
      "description": "Execution duration in milliseconds"
    },
    "command": {
      "type": "string",
      "description": "Original command that triggered this task"
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["file", "url", "text", "reference"]
          },
          "path": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "content_hash": { "type": "string" },
          "description": { "type": "string" }
        }
      },
      "description": "Input sources used"
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Output file path"
          },
          "type": {
            "type": "string",
            "enum": ["report", "figure", "data", "model", "paper", "manifest", "other"]
          },
          "size_bytes": {
            "type": "integer"
          },
          "content_hash": {
            "type": "string",
            "description": "SHA-256 hash of file content"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "description": "Generated artifacts"
    },
    "models_used": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "model": {
            "type": "string",
            "enum": ["claude", "codex", "gemini"]
          },
          "role": {
            "type": "string"
          },
          "session_id": {
            "type": "string"
          },
          "call_count": {
            "type": "integer"
          }
        }
      }
    },
    "evidence_ref": {
      "type": "string",
      "description": "Reference to evidence record file"
    },
    "trace_ref": {
      "type": "string",
      "description": "Reference to trace log file"
    },
    "status": {
      "type": "string",
      "enum": ["completed", "partial", "failed"],
      "description": "Final execution status"
    },
    "error": {
      "type": "string",
      "description": "Error message if failed"
    }
  }
}
